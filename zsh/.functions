# Print a list of all installed packages
#
# This function will detect if the package manager is apt (debian) or pacman (arch)
# and print out a list of all installed packages.
#
# The list will also include all installed flatpak packages.
installed() {

  #Check if its debian based
  if [ -x "$(command -v apt)" ]; then
    echo "Debian Packages:"
    
    #List all installed .deb packages
    apt list --installed
  fi

  #Check if pacman is installed
  if [ -x "$(command -v pacman)" ]; then
    echo "Arch Packages:"
    #List all our installed packages
    pacman -Qqe | xargs -I{} -P0 --no-run-if-empty pacman -Qs --color=auto "^{}\$"
  fi

  echo "------------------------------------"
  echo "Flatpak Packages:"
  #List all flatpak packages
  flatpak list
}



# Kill the process running on a given port number
#
# Usage: killport <port number>
#
# Example: killport 8080
#
# This function will kill the process that is currently running on the given port number.
killport() {
  if [[ $1 ]] ; then
    lsof -i :$1 | grep 'TCP' | awk '{print $2}' | xargs kill -9
  else
    echo "'$1' is not a valid port"
  fi
}